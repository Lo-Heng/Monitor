<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.busterlo.monitor">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icon_monitor"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/icon_monitor"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        >
        <activity
            android:theme="@style/AppTheme.Splash"
            android:name="splash.view.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="login.view.LoginActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity android:name="main.view.MainActivity"
                  android:theme="@style/AppTheme">
        </activity>
    </application>

    <!--获取网络使用权限-->
    <uses-permission android:name="android.permission.INTERNET"/>
</manifest>